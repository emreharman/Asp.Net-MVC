
@{
    ViewBag.Title = "Index";
}
@model IEnumerable<Kitaplik.Models.Kitap>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sıra No</th>
                <th>Kitap Adı</th>
                <th>Yazarı</th>
                <th>Kategorisi</th>
                <th>Yayın Evi</th>
                <th>Basım Yılı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @{ 
                int i = 0; 
                    foreach (var kitap in Model)
                    {
                   
                <tr>
                    <td>@(++i)</td>
                    <td>@kitap.Ad</td>
                    <td>@kitap.Yazari</td>
                    <td>@kitap.Kategori</td>
                    <td>@kitap.YayinEvi</td>
                    <td>@kitap.BasimYili</td>
                    <td>
                        <a href="/Kitap/Guncelle/@kitap.Id" class="btn btn-success btn-sm">Güncelle</a>
                        <a href="/Kitap/Sil/@kitap.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
                }
            }
        </tbody>
        
    </table>
    <div>
        <a href="/Kitap/KitapEkle/" class="btn btn-primary">Yeni Kitap Ekle</a>
    </div>
